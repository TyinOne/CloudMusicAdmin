{
  "asar": false,
  "extraFiles": ["/updater/*", "updater.exe"],
  "publish": [
    {
      "provider": "generic",
      "url": "http://127.0.0.1"
    }
  ],
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "allowElevation": true,
    "installerIcon": "config/icons/format.ico",
    "uninstallerIcon": "config/icons/format.ico",
    "installerHeaderIcon": "config/icons/format.ico",
    "createDesktopShortcut": true
  },
  "productName": "cloud-admin",
  "appId": "com.tyin.cloud.admin",
  "directories": {
    "output": "build"
  },
  "files": [
    "dist/electron/**/*"
  ],
  "dmg": {
    "contents": [
      {
        "x": 410,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 130,
        "y": 150,
        "type": "file"
      }
    ]
  },
  "mac": {
    "icon": "build/icons/icon.icns"
  },
  "win": {
    "icon": "./config/icons/format.ico",
    "target": "nsis"
  },
  "linux": {
    "target": "deb",
    "icon": "build/icons"
  }
}